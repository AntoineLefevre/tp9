{% extends 'base.html.twig' %}

{% import "macro.html.twig" as macro %}

{% block body %}

    <h2>index user</h2>
    <h4><a href="{{ path('app_user_new') }}">Ajouter User</a></h4>

    <h2>Liste des cartes</h2>
    <ul>
        {% for userCard in userCards %}
            <li>
                {% if is_granted('ROLE_ADMIN') == true %}
                    <h6>{{ userCard.user.email }}</h6>
                {% endif %}
                {{ macro.usercard(userCard) }}
            </li>
        {% endfor %}
    </ul>

{% if is_granted('ROLE_ADMIN') == true %}
    <h2>Liste de tous les users</h2>
    <ul>
    {% for user in users %}
        <li>
            <h6>{{ user.email }} - <a href="{{ path('app_user_edit', {'id' : user.id }) }}">Editer</a></h6>
            {% endfor %}
        </li>
    </ul>
{% endif %}
{% endblock %}
